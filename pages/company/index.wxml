    <view class="list">
        <navigator wx:for="{{companyList}}" wx:key="index" url="{{item.gf == -1 && item.ws == -1 ? '/pages/selectApply/index?id='+item.id : '/pages/apply/index?id='+item.id}}" hover-class="none" class="item">
