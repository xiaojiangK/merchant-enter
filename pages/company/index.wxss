.company{
    padding: 40rpx;
    background:linear-gradient(0deg,#F08300 0%,#FFBC6B 100%);
}
.company image{
    width: 100rpx;
    height: 100rpx;
    background: #fff;
    border-radius: 50%;
    margin: 0 20rpx 0 0;
    vertical-align: middle;
}
.company text{
    color: #fff;
    font-size: 28rpx;
    line-height: 100rpx;
    vertical-align: middle;
}
.menu{
    overflow: hidden;
    background: #fff;
    border-bottom: 2rpx solid #ccc;
}
.menu .item{
    width: 50%;
    float: left;
    display: flex;
    height: 97rpx;
    align-items: center;
    box-sizing: border-box;
    justify-content: center;
}
.menu .item:first-child{
    border-right: 2rpx solid #ccc;
}
.menu .item image{
    width: 38rpx;
    height: 43rpx;
    margin: 0 20rpx 0 0;
    vertical-align: middle;
}
.menu .item text{
    color: #333;
    font-size: 24rpx;
    vertical-align: middle;
}
.list{
    padding: 30rpx;
}
.list .item{
    padding: 0 30rpx;
    margin: 0 0 30rpx;
    background: #fff;
    border-radius: 10rpx;
    box-shadow: 0 2rpx 6rpx 0 rgba(0, 0, 0, 0.1);
}
.list .item .title{
    color: #333;
    padding: 26rpx 0;
    font-size: 30rpx;
    font-weight: bold;
    text-align: center;
    border-bottom: 1px solid #ccc;
}
.list .item .content{
    padding: 30rpx 0 0;
}
.list .item .content text{
    color: #333;
    display: block;
    font-size: 24rpx;
    padding: 0 0 30rpx;
}